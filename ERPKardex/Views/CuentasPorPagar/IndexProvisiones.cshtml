@{
    ViewData["Title"] = "Gestión de Provisiones (Facturas)";
}

<div class="container-fluid py-4">
    <div class="card shadow mb-4">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-primary">Filtros de Búsqueda</h6>
        </div>
        <div class="card-body">
            <div class="row align-items-end">
                <div class="col-md-3 mb-3">
                    <label>Desde</label>
                    <input type="date" id="txtFechaIni" class="form-control" value="@DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3 mb-3">
                    <label>Hasta</label>
                    <input type="date" id="txtFechaFin" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-4 mb-3">
                    <label>Proveedor</label>
                    <select id="cbx_ProveedorFiltro" class="form-control w-100"></select>
                </div>
                <div class="col-md-2 mb-3">
                    <button class="btn btn-primary btn-block" onclick="listarDocumentos()">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Listado de Documentos por Pagar</h6>
            <a href="/CuentasPorPagar/RegistroProvision" class="btn btn-success btn-sm font-weight-bold">
                <i class="fas fa-plus"></i> Nueva Provisión
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="tbl_Provisiones" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Fecha</th>
                            <th>Tipo</th>
                            <th>Documento</th>
                            <th>Proveedor</th>
                            <th>Ref. Orden</th>
                            <th class="text-right">Total</th>
                            <th class="text-right text-danger">Saldo</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalDetalleProvision" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Detalle de Provisión</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="cuerpoModal">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            cargarComboProveedores();
            listarDocumentos();
        });

        function cargarComboProveedores() {
            $('#cbx_ProveedorFiltro').select2({
                theme: 'bootstrap4', placeholder: "Todos los proveedores", allowClear: true,
                ajax: {
                    url: '/OrdenCompra/GetCombosRegistro', dataType: 'json', delay: 250,
                    processResults: function (data) {
                        return { results: data.proveedores.map(x => ({ id: x.id, text: x.tipoDocumentoIdentidad + ': ' + x.numeroDocumento + ' - ' + x.razonSocial })) };
                    }
                }
            });
        }

        function listarDocumentos() {
            let ini = $('#txtFechaIni').val();
            let fin = $('#txtFechaFin').val();
            let prov = $('#cbx_ProveedorFiltro').val();

            $('#tbl_Provisiones tbody').html('<tr><td colspan="9" class="text-center">Cargando...</td></tr>');

            $.get(`/CuentasPorPagar/GetProvisionesData?fechaInicio=${ini}&fechaFin=${fin}&proveedorId=${prov}`, function(res) {
                let html = '';
                if(res.status && res.data.length > 0) {
                    res.data.forEach(x => {
                        html += `<tr>
                            <td>${x.fecha}</td>
                            <td><span class="badge badge-light border">${x.tipoDoc}</span></td>
                            <td class="font-weight-bold">${x.documento}</td>
                            <td><small>${x.tipoDocumentoIdentidad}: ${x.numeroDocumento}</small><br>${x.proveedor}</td>
                            <td><small class="text-muted">${x.referencia}</small></td>
                            <td class="text-right">${x.moneda} ${x.total.toFixed(2)}</td>
                            <td class="text-right font-weight-bold text-danger">${x.moneda} ${x.saldo.toFixed(2)}</td>
                            <td class="text-center"><span class="badge ${x.colorEstado}">${x.estado}</span></td>
                            <td class="text-center">
                                    <a href="/CuentasPorPagar/ImprimirProvision?id=${x.id}" target="_blank" class="btn btn-sm btn-secondary" title="Imprimir">
                                      <i class="fas fa-print"></i>
                                    </a>
                                <button class="btn btn-sm btn-info" onclick="verDetalle(${x.id})"><i class="fas fa-eye"></i></button>
                            </td>
                        </tr>`;
                    });
                } else { html = '<tr><td colspan="9" class="text-center">No se encontraron registros.</td></tr>'; }
                $('#tbl_Provisiones tbody').html(html);
            });
        }
        
        
        function verDetalle(id) {
            // 1. Abrir modal y mostrar 'Cargando...'
            $('#modalDetalleProvision').modal('show');
            $('#cuerpoModal').html('<div class="text-center py-4"><i class="fas fa-spinner fa-spin fa-2x"></i><p>Cargando datos...</p></div>');

            // 2. Petición AJAX al nuevo método JSON
            $.get('/CuentasPorPagar/GetProvisionDetalleJson', { id: id }, function(res) {

                if (!res.status) {
                    $('#cuerpoModal').html('<div class="alert alert-danger">No se pudo cargar la información.</div>');
                    return;
                }

                let cab = res.cabecera;
                let det = res.detalles;

                // 3. Construir HTML de la Cabecera
                let html = `
                    <div class="row mb-3">
                        <div class="col-8">
                            <h5 class="text-primary font-weight-bold">${cab.proveedor}</h5>
                            <p class="text-muted mb-0">RUC: ${cab.ruc}</p>
                        </div>
                        <div class="col-4 text-right">
                            <h5 class="font-weight-bold">${cab.documento}</h5>
                            <span class="badge badge-info">${cab.fecha}</span>
                        </div>
                    </div>
                    <div class="row bg-light p-2 rounded mb-3 mx-0">
                        <div class="col-6"><strong>Ref:</strong> ${cab.referencia}</div>
                        <div class="col-6"><strong>Obs:</strong> ${cab.obs}</div>
                    </div>
                `;

                // 4. Construir Tabla de Detalles
                html += `
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Descripción</th>
                                    <th class="text-center">Und</th>
                                    <th class="text-right">Cant</th>
                                    <th class="text-right">P. Unit</th>
                                    <th class="text-right">Total</th>
                                </tr>
                            </thead>
                            <tbody>`;

                if (det.length > 0) {
                    det.forEach(d => {
                        html += `
                            <tr>
                                <td>${d.item}</td>
                                <td>${d.producto}</td>
                                <td class="text-center">${d.unidad}</td>
                                <td class="text-right">${d.cantidad.toFixed(2)}</td>
                                <td class="text-right">${d.precio.toFixed(2)}</td>
                                <td class="text-right font-weight-bold">${d.importe.toFixed(2)}</td>
                            </tr>`;
                    });
                } else {
                    html += `<tr><td colspan="6" class="text-center">Sin detalles</td></tr>`;
                }

                html += `</tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="text-right font-weight-bold">SubTotal:</td>
                                <td class="text-right">${cab.moneda} ${cab.subTotal.toFixed(2)}</td>
                            </tr>
                            <tr>
                                <td colspan="5" class="text-right font-weight-bold">IGV:</td>
                                <td class="text-right">${cab.moneda} ${cab.igv.toFixed(2)}</td>
                            </tr>
                            <tr class="bg-primary text-white">
                                <td colspan="5" class="text-right font-weight-bold">TOTAL:</td>
                                <td class="text-right font-weight-bold">${cab.moneda} ${cab.total.toFixed(2)}</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>`;

                // 5. Insertar el HTML construido
                $('#cuerpoModal').html(html);
            }).fail(function() {
                $('#cuerpoModal').html('<div class="alert alert-danger">Error de servidor.</div>');
            });
        }
    </script>
}