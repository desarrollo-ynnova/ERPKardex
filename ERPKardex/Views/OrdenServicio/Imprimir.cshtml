@model ERPKardex.Models.OrdenServicio
@{
    Layout = null;

    var empresa = ViewBag.Empresa as ERPKardex.Models.Empresa;
    var proveedor = ViewBag.Proveedor as ERPKardex.Models.Proveedor;
    var moneda = ViewBag.Moneda as ERPKardex.Models.Moneda;
    var usuario = ViewBag.Usuario as ERPKardex.Models.Usuario;
    var detalles = ViewBag.Detalles as IEnumerable<dynamic>;
    var estado = ViewBag.Estado as string;

    string simbolo = moneda?.Simbolo ?? "S/.";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>OS @Model.Numero</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 11px;
            color: #000;
        }

        .box-border {
            border: 1px solid #000;
            border-radius: 5px;
            padding: 10px;
        }

        .table-bordered th, .table-bordered td {
            border: 1px solid #000 !important;
            padding: 4px;
            vertical-align: middle;
        }

        .bg-header {
            background-color: #eee;
            font-weight: bold;
        }

        @@media print {
            .no-print {
                display: none !important;
            }

            body {
                margin: 0;
                padding: 0;
            }

            .container {
                max-width: 100%;
                width: 100%;
            }

            .bg-header {
                background-color: #eee !important;
                -webkit-print-color-adjust: exact;
            }

            .box-border {
                border: 1px solid #000 !important;
            }
        }
    </style>
</head>
<body class="bg-white">

    <div class="container mt-3 mb-3 no-print text-right">
        <button onclick="window.print()" class="btn btn-primary"><i class="fas fa-print"></i> Imprimir</button>
        <button onclick="window.close()" class="btn btn-secondary"><i class="fas fa-times"></i> Cerrar</button>
    </div>

    <div class="container p-4">

        <div class="row mb-4 align-items-center">
            <div class="col-2 text-center">
                <i class="fas fa-industry fa-4x text-secondary"></i>
            </div>
            <div class="col-6">
                <h4 class="font-weight-bold m-0">@empresa?.RazonSocial.ToUpper()</h4>
                <div class="font-weight-bold">RUC: @empresa?.Ruc</div>
                <div class="small">@empresa?.Direccion</div>
            </div>
            <div class="col-4">
                <div class="box-border text-center bg-light">
                    <h6 class="font-weight-bold mb-1">ORDEN DE SERVICIO</h6>
                    <h4 class="font-weight-bold text-danger m-0">@Model.Numero</h4>

                    <div class="mt-2 border-top border-secondary pt-1">
                        <small class="text-muted d-block">ESTADO ACTUAL</small>
                        <span class="font-weight-bold text-dark" style="font-size: 1.3em; letter-spacing: 1px;">
                            @estado?.ToUpper()
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-12">
                <div class="box-border">
                    <div class="row">
                        <div class="col-7 border-right">
                            <h6 class="font-weight-bold text-decoration-underline mb-2">DATOS DEL PROVEEDOR</h6>
                            <div class="row">
                                <div class="col-3 font-weight-bold">RAZÓN SOCIAL:</div>
                                <div class="col-9">@proveedor?.RazonSocial</div>

                                <div class="col-3 font-weight-bold">RUC:</div>
                                <div class="col-9">@proveedor?.Ruc</div>

                                <div class="col-3 font-weight-bold">CONTACTO:</div>
                                <div class="col-9">@(proveedor?.NombreContacto ?? "-")</div>

                                <div class="col-3 font-weight-bold">TELÉFONO:</div>
                                <div class="col-9">@(proveedor?.Telefono ?? "-")</div>
                            </div>
                        </div>

                        <div class="col-5">
                            <h6 class="font-weight-bold text-decoration-underline mb-2">CONDICIONES DEL SERVICIO</h6>
                            <div class="row">
                                <div class="col-5 font-weight-bold">F. EMISIÓN:</div>
                                <div class="col-7">@Model.FechaEmision?.ToString("dd/MM/yyyy")</div>

                                <div class="col-5 font-weight-bold">INICIO SERV.:</div>
                                <div class="col-7">@Model.FechaInicioServicio?.ToString("dd/MM/yyyy")</div>

                                <div class="col-5 font-weight-bold">FIN SERV.:</div>
                                <div class="col-7">@Model.FechaFinServicio?.ToString("dd/MM/yyyy")</div>

                                <div class="col-5 font-weight-bold">FORMA PAGO:</div>
                                <div class="col-7">@Model.CondicionPago</div>

                                <div class="col-5 font-weight-bold">MONEDA:</div>
                                <div class="col-7">@moneda?.Nombre.ToUpper()</div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-2 border-top pt-2">
                        <div class="col-12">
                            <strong>LUGAR DEL SERVICIO:</strong> @Model.LugarDestino
                        </div>
                        <div class="col-12">
                            <strong>OBSERVACIÓN:</strong> <span class="font-italic">@(string.IsNullOrEmpty(Model.Observacion) ? "---" : Model.Observacion)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <table class="table table-bordered table-sm mt-3">
            <thead class="bg-header text-center">
                <tr>
                    <th style="width: 5%">ITM</th>
                    <th style="width: 8%">CANT.</th>
                    <th style="width: 8%">UND.</th>
                    <th style="width: 40%">DESCRIPCIÓN DEL SERVICIO</th>
                    <th style="width: 12%">P. UNITARIO</th>
                    <th style="width: 12%">TOTAL</th>
                </tr>
            </thead>
            <tbody>
                @if (detalles != null)
                {
                    foreach (var item in detalles)
                    {
                        <tr>
                            <td class="text-center">@item.Item</td>
                            <td class="text-center font-weight-bold">@Convert.ToDecimal(item.Cantidad).ToString("N2")</td>
                            <td class="text-center">@item.UnidadMedida</td>
                            <td>
                                @item.Descripcion
                                @if (!string.IsNullOrEmpty(item.Lugar))
                                {
                                    <br>
                        
                                    <small class="text-muted">Lugar: @item.Lugar</small>
                                }
                            </td>
                            <td class="text-right">@simbolo @Convert.ToDecimal(item.PrecioUnitario).ToString("N2")</td>
                            <td class="text-right font-weight-bold">@simbolo @Convert.ToDecimal(item.Total).ToString("N2")</td>
                        </tr>
                    }
                }

                @for (int i = 0; i < (8 - (detalles?.Count() ?? 0)); i++)
                {
                    <tr><td colspan="6" style="height: 25px;">&nbsp;</td></tr>
                }
            </tbody>
        </table>

        <div class="row justify-content-end mb-4">
            <div class="col-5">
                <table class="table table-sm table-bordered mb-0">
                    <tr>
                        <td class="bg-light font-weight-bold text-right">SUBTOTAL (VALOR VENTA):</td>
                        <td class="text-right">
                            @simbolo @((Model.TotalAfecto + Model.TotalInafecto)?.ToString("N2"))
                        </td>
                    </tr>

                    @if (Model.IgvTotal > 0)
                    {
                        <tr>
                            <td class="bg-light font-weight-bold text-right">I.G.V. (18%):</td>
                            <td class="text-right">@simbolo @Model.IgvTotal?.ToString("N2")</td>
                        </tr>
                    }

                    <tr>
                        <td class="bg-light font-weight-bold text-right" style="font-size: 1.1em;">TOTAL:</td>
                        <td class="text-right font-weight-bold" style="font-size: 1.1em;">@simbolo @Model.Total?.ToString("N2")</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="row mt-5 pt-4">
            <div class="col-6 text-center">
                <div class="border-top border-dark w-75 mx-auto pt-1">
                    <strong>ELABORADO POR</strong><br>
                    <span class="text-uppercase small">@usuario?.Nombre</span>
                </div>
            </div>
            <div class="col-6 text-center">
                <div class="border-top border-dark w-75 mx-auto pt-1">
                    <strong>AUTORIZADO POR</strong><br>
                    <small>Gerencia / Finanzas</small>
                </div>
            </div>
        </div>

        <div class="fixed-bottom text-center small text-muted mb-2 no-print">
            SYSCONT - Impreso el @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
        </div>
    </div>

    <script>
        window.onload = function() {
            setTimeout(function(){ window.print(); }, 800);
        }
    </script>
</body>
</html>