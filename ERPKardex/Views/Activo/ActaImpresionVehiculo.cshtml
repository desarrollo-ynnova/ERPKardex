@{
    Layout = null;
    int idMovimiento = ViewBag.IdMovimiento;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Acta de Vehículo</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            padding: 40px;
            max-width: 850px;
            margin: auto;
        }

        .text-center {
            text-align: center;
        }

        .text-right {
            text-align: right;
        }

        .text-bold {
            font-weight: bold;
        }

        .mb-4 {
            margin-bottom: 20px;
        }

        .uppercase {
            text-transform: uppercase;
        }

        .header {
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .titulo {
            font-size: 18px;
            font-weight: bold;
            margin: 5px 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 15px;
        }

        th, td {
            border: 1px solid #999;
            padding: 6px;
            text-align: left;
            vertical-align: top;
        }

        th {
            background-color: #f0f0f0;
            width: 25%;
        }

        .firmas {
            margin-top: 80px;
            width: 100%;
            border: none;
        }

            .firmas td {
                border: none;
                text-align: center;
                width: 50%;
                padding: 0 40px;
            }

        .linea-firma {
            border-top: 1px solid #000;
            margin-top: 50px;
            padding-top: 5px;
        }

        .legal {
            font-size: 10px;
            text-align: justify;
            color: #444;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="header text-center">
        <div class="titulo" id="lblTitulo">ACTA DE ENTREGA DE VEHÍCULO</div>
        <div id="lblCodigo" style="font-size: 14px;"></div>
    </div>

    <div class="text-right mb-4">
        <strong>Fecha:</strong> <span id="lblFecha">--</span>
    </div>

    <div style="background:#ddd; padding:5px; font-weight:bold; margin-bottom:5px;">1. DATOS DEL CONDUCTOR / RESPONSABLE</div>
    <table>
        <tr>
            <th>Nombre Completo:</th>
            <td id="usrNombre"></td>
            <th>DNI:</th>
            <td id="usrDni"></td>
        </tr>
        <tr>
            <th>Cargo:</th>
            <td id="usrCargo"></td>
            <th>Empresa:</th>
            <td id="usrEmpresa"></td>
        </tr>
    </table>

    <div style="background:#ddd; padding:5px; font-weight:bold; margin-bottom:5px;">2. DATOS DE LA UNIDAD</div>
    <div id="containerVehiculos"></div>

    <div class="legal">
        <strong>CONDICIONES DE USO:</strong><br>
        1. El conductor certifica haber recibido el vehículo en las condiciones descritas y se compromete a cuidarlo.<br>
        2. El vehículo debe ser usado estrictamente para labores de la empresa.<br>
        3. Cualquier infracción de tránsito cometida durante la tenencia de la unidad será responsabilidad exclusiva del conductor.<br>
        4. En caso de siniestro, informar inmediatamente al área encargada.
    </div>

    <table class="firmas">
        <tr>
            <td>
                <div class="linea-firma" id="firmaEmisor"></div>
                <div style="font-size:11px; margin-top:5px;">ENTREGADO POR</div>
            </td>
            <td>
                <div class="linea-firma" id="firmaReceptor"></div>
                <div style="font-size:11px; margin-top:5px;">RECIBIDO CONFORME</div>
            </td>
        </tr>
    </table>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            fetch('/Activo/GetDatosActa?idMovimiento=@idMovimiento')
                .then(r => r.json())
                .then(res => {
                    if (res.status) {
                        const d = res.data;

                        document.getElementById('lblTitulo').innerText = d.titulo + " DE VEHÍCULO";
                        document.getElementById('lblCodigo').innerText = d.codigo;
                        document.getElementById('lblFecha').innerText = d.fecha;

                        // Receptor siempre es el Conductor en el formato visual (o adaptamos lógica)
                        // Para simplificar, mostramos quien Recibe en la sección 1
                        const responsable = d.receptor;
                        document.getElementById('usrNombre').innerText = responsable.nombre || "";
                        document.getElementById('usrDni').innerText = responsable.dni || "";
                        document.getElementById('usrCargo').innerText = responsable.cargo || "";
                        document.getElementById('usrEmpresa').innerText = responsable.empresa || "";

                        // Renderizar Vehículos
                        let html = "";
                        d.items.forEach(item => {
                            html += `
                            <table>
                                <tr>
                                    <th>Placa:</th><td class="text-bold" style="font-size:14px;">${item.serie}</td>
                                    <th>Marca/Modelo:</th><td>${item.equipo} ${item.modelo}</td>
                                </tr>
                                <tr>
                                    <th>Datos Técnicos:</th><td colspan="3">${item.caracteristicas}</td>
                                </tr>
                                <tr>
                                    <th>Estado:</th><td>${item.condicion}</td>
                                    <th>Kilometraje:</th><td>(Ver bitácora)</td>
                                </tr>
                                <tr>
                                    <th>Observaciones:</th><td colspan="3" style="height:40px;"></td>
                                </tr>
                            </table>`;
                        });
                        document.getElementById('containerVehiculos').innerHTML = html;

                        // Firmas
                        document.getElementById('firmaEmisor').innerHTML = `<b>${d.emisor.nombre}</b><br>${d.emisor.cargo}`;
                        document.getElementById('firmaReceptor').innerHTML = `<b>${d.receptor.nombre}</b><br>DNI: ${d.receptor.dni}`;

                        setTimeout(() => window.print(), 800);
                    } else {
                        alert(res.message);
                    }
                });
        });
    </script>
</body>
</html>