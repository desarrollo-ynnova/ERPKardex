    <script>
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        function loadBigModal(url, title) {
            $.ajax({
                url: url,
                type: 'GET',
                success: function (html) {
                    // Cambiar el contenido del modal
                    $('#dynamic-modal .modal-dialog').attr('class', 'modal-dialog modal-xl');
                    $('#modal-body').html(html);
                    $('#modal-title').text(title);
                    $('#dynamic-modal').modal('show');
                },
                error: function (xhr, status, error) {
                    console.error('Error al cargar el contenido del modal:', error);
                }
            });
        }

        function loadMediumModal(url, title) {
            $.ajax({
                url: url,
                type: 'GET',
                success: function (html) {
                    $('#dynamic-modal .modal-dialog').attr('class', 'modal-dialog modal-lg');
                    $('#modal-body').html(html);
                    $('#modal-title').text(title);
                    $('#dynamic-modal').modal('show');
                },
                error: function (xhr, status, error) {
                    console.error('Error al cargar el contenido del modal:', error);
                }
            });
        }

        function loadShortModal(url, title) {
            $.ajax({
                url: url,
                type: 'GET',
                success: function (html) {
                    $('#dynamic-modal .modal-dialog').attr('class', 'modal-dialog modal-sm');
                    $('#modal-body').html(html);
                    $('#modal-title').text(title);
                    $('#dynamic-modal').modal('show');
                },
                error: function (xhr, status, error) {
                    console.error('Error al cargar el contenido del modal:', error);
                }
            });
        }
    </script>
</head>
