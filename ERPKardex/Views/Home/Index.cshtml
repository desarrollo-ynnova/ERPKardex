@{
    ViewData["Title"] = "Home Page";
    // Extraemos los valores de los Claims para que el código sea más limpio
    var nombreUsuario = User.Identity.Name;
    var nombreEmpresa = User.FindFirst("RazonSocial")?.Value ?? "Empresa no identificada";
}

<div class="text-center mt-5">
    <div class="jumbotron bg-white shadow-sm">
        <h1 class="display-4 font-weight-bold text-primary">¡Bienvenido!</h1>
        <hr class="my-4" style="width: 20%; border-top: 3px solid #007bff;">

        <p class="lead">
            Estás conectado como <span class="badge badge-info p-2">@nombreUsuario</span>
        </p>

        <h3 class="text-secondary mt-4">
            <i class="fas fa-building mr-2"></i> @nombreEmpresa
        </h3>

        <div class="mt-5">
            <p class="text-muted">Utiliza el menú lateral para gestionar tus almacenes e inventarios.</p>
        </div>
    </div>
</div>