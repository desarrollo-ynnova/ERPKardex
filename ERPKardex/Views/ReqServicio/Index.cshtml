@using System.Security.Claims
@{
    ViewData["Title"] = "Bandeja de Requerimientos de Servicio";
    var role = User.FindFirst(ClaimTypes.Role)?.Value;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"><i class="bi bi-tools"></i> Requerimientos de Servicio</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a href="/ReqServicio/Registrar" class="btn btn-info btn-lg">
                    <i class="bi bi-plus-circle"></i> Nuevo Servicio
                </a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card shadow border-left-info">
            <div class="card-body">
                <table id="tblDataServ" class="table table-bordered table-hover w-100">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>N° REQ</th>
                            <th>F. EMISIÓN</th>
                            <th>F. NECESARIA</th>
                            <th>EMPRESA</th>
                            <th>SOLICITANTE</th>
                            <th>OBSERVACIÓN</th>
                            <th>ESTADO</th>
                            <th style="width: 150px;">ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="modalDetalle" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="lblTituloModal">Detalle del Servicio</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-light border">
                    <strong>Observación:</strong> <span id="lblObservacion"></span>
                </div>
                <h6 class="font-weight-bold text-secondary">Servicios Solicitados:</h6>
                <table class="table table-sm table-striped border">
                    <thead class="thead-light">
                        <tr>
                            <th style="width: 50px;">Item</th>
                            <th>Centro costo</th>
                            <th>Descripción del Servicio</th>
                            <th>U.M.</th>
                            <th class="text-center" style="width: 80px;">Cant.</th>
                            <th>Lugar</th>
                            <th class="text-center">Estado</th>
                        </tr>
                    </thead>
                    <tbody id="tblModalBody"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let role = '@role';

        $(document).ready(function () {
            $('#tblDataServ').DataTable({
                responsive: true,
                autoWidth: false,
                language: {
                    processing: "Procesando...",
                    sSearch: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros",
                    info: "Mostrando del _START_ al _END_ de un total de _TOTAL_ registros",
                    infoEmpty: "Sin registros encontrados.",
                    infoFiltered: "(Total de _MAX_ registros filtrados)",
                    loadingRecords: "Cargando...",
                    zeroRecords: "No se encontraron registros",
                    emptyTable: "No hay datos disponibles en la tabla",
                    paginate: {
                        previous: "Anterior",
                        next: "Siguiente",
                        first: "Primero",
                        last: "Último",
                    },
                    aria: {
                        sortAscending: ": Activar para ordenar la columna de manera ascendente",
                        sortDescending: ": Activar para ordenar la columna de manera descendente"
                    },
                    select: {
                        rows: {
                            _: "%d filas seleccionadas",
                            0: "Haz clic en una fila para seleccionarla",
                            1: "1 fila seleccionada"
                        }
                    },
                    buttons: {
                        copyTitle: 'Copiado en el portapapeles',
                        copyKeys: 'Presiona <i>ctrl</i> o <i>\u2318</i> + <i>C</i> para copiar los datos de la tabla a tu portapapeles. <br><br>Para cancelar, haga clic en este mensaje o presione Esc.',
                        copySuccess: {
                            _: '%d registros copiados correctamente',
                            1: '1 registro copiado correctamente'
                        }
                    }
                },
                ajax: {
                    url: '/ReqServicio/GetRequerimientosData',
                    type: 'GET',
                    datatype: 'json'
                },
                columns: [
                    { data: "numero", className: "font-weight-bold align-middle" },
                    { data: "fechaEmision", className: "align-middle" },
                    { data: "fechaNecesaria", className: "align-middle" },
                    { data: "empresa", className: "align-middle" },
                    { data: "solicitante", className: "align-middle" },
                    { data: "observacion", className: "align-middle small" },
                    {
                        data: "estado", className: "text-center align-middle",
                        render: function (data) {
                            let color = 'secondary';
                            if(data === 'Pendiente') color = 'warning';
                            if(data === 'Aprobado') color = 'success';
                            if(data === 'Rechazado') color = 'danger';
                            if(data === 'Atendido Parcial') color = 'info';
                            if(data === 'Atendido Total') color = 'primary';

                            return `<span class="badge badge-${color}" style="font-size:0.9rem">${data}</span>`;
                        }
                    },
                    {
                        data: null, className: "text-center",
                        render: function (data) {
                            let botonesGestion = '';
                            if(data.estado === 'Pendiente' && ["1", "3"].includes(role)) {
                                botonesGestion = `
                                <button class="btn btn-sm btn-success" title="Aprobar" onclick="cambiarEstado(${data.id}, 'Aprobado')">
                                    <i class="bi bi-check-lg"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" title="Rechazar" onclick="cambiarEstado(${data.id}, 'Rechazado')">
                                    <i class="bi bi-x-lg"></i>
                                </button>`;
                            }
                            return `
                            <div class="btn-group">
                                <button class="btn btn-sm btn-secondary" title="Imprimir Formato" onclick="fct_Imprimir(${data.id})">
                                    <i class="fas fa-print"></i>
                                </button>
                                <button class="btn btn-sm btn-info" title="Ver Detalle" onclick="verDetalle(${data.id})">
                                    <i class="bi bi-eye-fill"></i>
                                </button>
                                ${botonesGestion}
                            </div>`;
                        }
                    }
                ],
                order: [[0, "desc"]]
            });
        });

        function verDetalle(id) {
            $('#tblModalBody').html('<tr><td colspan="7" class="text-center">Cargando...</td></tr>');
            $('#modalDetalle').modal('show');

            $.get('/ReqServicio/GetDetalleReq?id=' + id, function(res) {
                if(res.status) {
                    $('#lblTituloModal').text("Solicitud: " + res.cabecera.numero);
                    $('#lblObservacion').text(res.cabecera.observacion || "Sin observaciones");

                    let html = '';
                    res.detalles.forEach(d => {
                        let badgeItem = d.estado === 'Pendiente' ? 'badge-warning' : 'badge-success';

                        html += `<tr>
                            <td>${d.item}</td>
                            <td>${d.centroCosto}</td>
                            <td>${d.descripcionServicio}</td>
                            <td>${d.unidadMedida}</td>
                            <td class="text-center font-weight-bold">${d.cantidadSolicitada}</td>
                            <td>${d.lugar}</td>
                            <td class="text-center"><span class="badge ${badgeItem}">${d.estado}</span></td>
                        </tr>`;
                    });
                    $('#tblModalBody').html(html);
                }
            });
        }

        function cambiarEstado(id, nuevoEstadoNombre) {
            let accion = nuevoEstadoNombre === "Aprobado" ? "Aprobar" : "Rechazar";
            let color = nuevoEstadoNombre === "Aprobado" ? "#28a745" : "#dc3545";

            Swal.fire({
                title: `¿${accion} Servicio?`,
                icon: "warning",
                showCancelButton: true,
                reverseButtons: true,
                confirmButtonColor: color,
                confirmButtonText: `Sí, ${accion}`,
                cancelButtonText: "Revisar"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/ReqServicio/CambiarEstado', { id: id, nombreEstado: nuevoEstadoNombre }, function(res) {
                        if(res.status) {
                            Swal.fire("Éxito", res.message, "success");
                            $('#tblDataServ').DataTable().ajax.reload();
                        } else {
                            Swal.fire("Error", res.message, "error");
                        }
                    });
                }
            });
        }
        
        function fct_Imprimir(id) {
            // Abre en una pestaña nueva
            window.open('/ReqServicio/Imprimir?id=' + id, '_blank');
        }
    </script>
}