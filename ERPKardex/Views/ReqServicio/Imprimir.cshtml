@model ERPKardex.Models.ReqServicio
@{
    Layout = null;

    var empresa = ViewBag.Empresa as ERPKardex.Models.Empresa;
    var usuario = ViewBag.Usuario as ERPKardex.Models.Usuario;
    var detalles = ViewBag.Detalles as IEnumerable<dynamic>;
    var nombreEstado = ViewBag.Estado as string;

    // Datos del Aprobador
    var aprobadorNombre = ViewBag.AprobadorNombre as string;
    var aprobadorCargo = ViewBag.AprobadorCargo as string;
    var fechaResolucion = ViewBag.FechaResolucion as DateTime?;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>REQ SERV @Model.Numero</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 11px;
            color: #000;
        }

        .box-border {
            border: 1px solid #000;
            border-radius: 5px;
            padding: 10px;
        }

        .table-bordered th, .table-bordered td {
            border: 1px solid #000 !important;
            padding: 5px;
            vertical-align: middle;
        }

        .bg-header {
            background-color: #eee;
            font-weight: bold;
        }

        @@media print {
            .no-print {
                display: none !important;
            }

            body {
                margin: 0;
                padding: 0;
            }

            .container {
                max-width: 100%;
                width: 100%;
            }

            .box-border {
                border: 1px solid #000 !important;
            }

            -webkit-print-color-adjust: exact;
        }
    </style>
</head>
<body class="bg-white">

    <div class="container mt-3 mb-3 no-print text-right">
        <button onclick="window.print()" class="btn btn-primary"><i class="fas fa-print"></i> Imprimir</button>
        <button onclick="window.close()" class="btn btn-secondary"><i class="fas fa-times"></i> Cerrar</button>
    </div>

    <div class="container p-4">

        <div class="row mb-4 align-items-center">
            <div class="col-2 text-center">
                <i class="fas fa-industry fa-4x text-secondary"></i>
            </div>
            <div class="col-6">
                <h4 class="font-weight-bold m-0">@empresa?.RazonSocial.ToUpper()</h4>
                <div class="font-weight-bold">RUC: @empresa?.Ruc</div>
                <div class="small">@empresa?.Direccion</div>
            </div>
            <div class="col-4">
                <div class="box-border text-center bg-light">
                    <h6 class="font-weight-bold mb-1">REQUERIMIENTO DE SERVICIO</h6>
                    <h4 class="font-weight-bold text-danger m-0">@Model.Numero</h4>

                    <div class="mt-2 border-top border-secondary pt-1">
                        <small class="text-muted d-block">ESTADO DEL DOCUMENTO</small>
                        <span class="font-weight-bold text-dark" style="font-size: 1.3em; letter-spacing: 1px;">
                            @nombreEstado?.ToUpper()
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-12">
                <div class="box-border">
                    <div class="row">
                        <div class="col-md-7 mb-2">
                            <strong>SOLICITADO POR:</strong> @usuario?.Nombre.ToUpper() <br>
                            <strong>CARGO:</strong> @usuario?.Cargo?.ToUpper()
                        </div>
                        <div class="col-md-5 mb-2 text-right">
                            <strong>FECHA EMISIÓN:</strong> @Model.FechaEmision?.ToString("dd/MM/yyyy HH:mm") <br>
                            <strong>FECHA NECESARIA:</strong> @Model.FechaNecesaria?.ToString("dd/MM/yyyy")
                        </div>
                        <div class="col-md-12 border-top pt-2">
                            <strong>OBSERVACIÓN:</strong> <br>
                            <span class="font-italic">@(string.IsNullOrEmpty(Model.Observacion) ? "---" : Model.Observacion)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <table class="table table-bordered table-sm mt-3">
            <thead class="bg-header text-center">
                <tr>
                    <th style="width: 5%">ITEM</th>
                    <th style="width: 8%">CANT.</th>
                    <th style="width: 8%">UND.</th>
                    <th style="width: 35%">DESCRIPCIÓN DEL SERVICIO</th>
                    <th style="width: 20%">LUGAR / DESTINO</th>
                    <th style="width: 24%">CENTRO DE COSTO</th>
                </tr>
            </thead>
            <tbody>
                @if (detalles != null)
                {
                    foreach (var item in detalles)
                    {
                        <tr>
                            <td class="text-center">@item.Item</td>
                            <td class="text-center font-weight-bold">@Convert.ToInt32(item.CantidadSolicitada)</td>
                            <td class="text-center">@item.UnidadMedida</td>
                            <td>@item.DescripcionServicio</td>
                            <td class="text-center small">@item.Lugar</td>
                            <td class="text-center small">@item.CentroCosto</td>
                        </tr>
                    }
                }

                @for (int i = 0; i < (12 - (detalles?.Count() ?? 0)); i++)
                {
                    <tr>
                        <td style="height: 25px;">&nbsp;</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row mt-5 pt-5">
            <div class="col-6 text-center">
                <div class="border-top border-dark w-75 mx-auto pt-1">
                    <strong>SOLICITADO POR</strong><br>
                    <span class="text-uppercase small">@usuario?.Nombre</span>
                </div>
            </div>

            <div class="col-6 text-center">
                <div class="border-top border-dark w-75 mx-auto pt-1">
                    <strong>
                        @{
                            string tituloFirma = "AUTORIZADO POR";
                            if (!string.IsNullOrEmpty(nombreEstado))
                            {
                                var st = nombreEstado.ToUpper();
                                if (st.Contains("ANULADO") || st.Contains("RECHAZADO")) tituloFirma = "RECHAZADO/ANULADO POR";
                            }
                        }
                        @tituloFirma
                    </strong>
                    <br>

                    @if (!string.IsNullOrEmpty(aprobadorNombre))
                    {
                        <span class="text-uppercase small font-weight-bold">@aprobadorNombre</span>
                    
                        <br>
                        @if (!string.IsNullOrEmpty(aprobadorCargo))
                        {
                            <span class="small text-muted">@aprobadorCargo</span>
                            <br>
                        }

                        @if (fechaResolucion.HasValue)
                        {
                            <span class="small">Fecha: @fechaResolucion.Value.ToString("dd/MM/yyyy HH:mm")</span>
                        }
                    }
                    else
                    {
                        <small class="text-muted">Firma y Sello</small>
                    }
                </div>
            </div>
        </div>

        <div class="fixed-bottom text-center small text-muted mb-2 no-print">
            Impreso el @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
        </div>
    </div>

    <script>
        window.onload = function() {
            setTimeout(function(){ window.print(); }, 800);
        }
    </script>
</body>
</html>