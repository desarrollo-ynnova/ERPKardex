@{
    ViewData["Title"] = "Gestionar Productos";
    var empresaIdClaim = User.FindFirst("EmpresaId")?.Value;
    int empresaId = !string.IsNullOrEmpty(empresaIdClaim) ? int.Parse(empresaIdClaim) : 0;
}
<div class="card d-none" id="efec-cargando">
    <div class="position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center overlay dark">
        <i class="fas fa-3x fa-sync-alt fa-spin text-white"></i>
    </div>
</div>
<div class="container-fluid p-4">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-12">
                <h1>Gestionar productos</h1>
            </div>
            <div class="col-md-4 mb-3"><label>Sucursal</label><select id="cbx_Sucursal" class="form-control select2-busqueda"></select></div>
            <div class="col-md-4 mb-3"><label>Almacén</label><select id="cbx_Almacen" class="form-control select2-busqueda"><option value="">-- SELECCIONE --</option></select></div>
            <div class="col-md-4 text-right">
                <button id="btn_Generar" class="btn btn-primary btn-lg"><i class="bi bi-play-fill"></i> Generar Reporte</button>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-12">
                <table id="tbl_Productos" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="text-center">PROVEEDOR</th>
                            <th class="text-center">TIPO DOCUMENTO</th>
                            <th class="text-center">DOCUMENTO</th>
                            <th class="text-center">CÓDIGO</th>
                            <th class="text-center">GRUPO</th>
                            <th class="text-center">SUBGRUPO</th>
                            <th class="text-center">DESCRIPCIÓN</th>
                            <th class="text-center">DESCRIPCIÓN COM.</th>
                            <th class="text-center">U. MEDIDA</th>
                            <th class="text-center">CANTIDAD</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    var dtProductos;

    $(document).ready(function () {

        $('#btn_Generar').on('click', function() {
            if ($('#cbx_Almacen').val()) {
                fct_IniciarTablaProductos('#tbl_Productos');
            } else {
                toastr.warning('Debe seleccionar un almacén');
            }
        });

        fct_FillCombo('/Producto/GetSucursalesByEmpresa?empresaId=@empresaId', '#cbx_Sucursal', 'id', 'nombre', '-- SUCURSAL --', 'codigo');
        
        $('#cbx_Sucursal').on('change', function () {
            fct_FillCombo(`/Producto/GetAlmacenesBySucursal?sucursalId=${$(this).val()}&empresaId=@empresaId`, '#cbx_Almacen', 'id', 'nombre', '-- ALMACÉN --', 'codigo');
        });

        // $('body').addClass('sidebar-collapse');
        var windowHeight = $('body > div.wrapper > div.content-wrapper').height() / 2;
        //CONFIGURACION POR DEFECTO DATATABLES
        $.extend($.fn.dataTable.defaults, {
            dom: "<'row align-items-center'<'col-sm-8 justify-content-start'f><'col-sm-4 c1 d-flex justify-content-end'>>" + "<'row align-items-center'<'col-sm-6'l><'col-sm-6 my-3 justify-content-start d-flex'B>" + "<'col-sm-6'i><'col-sm-6 mb-3 d-flex justify-content-end'p>" + "rt" + "<'col-sm-6'i><'col-sm-6 mt-1 d-flex justify-content-end'p>",
            // dom: "<'row pb-1'<'col-sm-9 d-flex'B><'col-sm-3 c1 d-flex justify-content-end'>>" + "<'row'<'col-sm-4'l><'col-sm-8 justify-content-start'f>>" + "<'row'<'col-sm-6'i><'col-sm-6 d-flex justify-content-end'p>>" + "rt" + "<'row'<'col-sm-6'i><'col-sm-6 mt-1 d-flex justify-content-end'p>>",
            // dom: "<'row pb-1'<'col-sm-9'B><'col-sm-3 c1 d-flex justify-content-end'>>" + "<'row'<'col-sm-10'l><'col-sm-2'f>>" + "<'row'<'col-sm-6'i><'col-sm-6'p>>" + "rt" + "<'row'<'col-sm-6'i><'col-sm-6'p>>",
            // dom: "<'row pb-1'<'col-sm-10'B><'col-sm-2 c1 d-flex justify-content-end'>>" + "<'row'<'col-sm-11'l><'col-sm-1'f>>" + "<'row'<'col-sm-10'i><'col-sm-2'p>>" + "rt" + "<'row'<'col-sm-10'i><'col-sm-2'p>>",
            paging: true,
            select: true,
            scroller: false,
            deferRender: true,
            scrollY: windowHeight,
            scrollX: true,
            fixedHeader: true,
            ordering: true,
            destroy: true,
            responsive: true,
            autoWidth: false,
            processing: true,
            filter: true,
            orderMulti: true,
            stateSave: false,
            serverSide: false,
            language: {
                processing: "Procesando...",
                sSearch: "Buscar:",
                lengthMenu: "Mostrar _MENU_ registros",
                info: "Mostrando del _START_ al _END_ de un total de _TOTAL_ registros",
                infoEmpty: "Sin registros encontrados.",
                infoFiltered: "(Total de _MAX_ registros filtrados)",
                loadingRecords: "Cargando...",
                zeroRecords: "No se encontraron registros",
                emptyTable: "No hay datos disponibles en la tabla",
                paginate: {
                    previous: "Anterior",
                    next: "Siguiente",
                    first: "Primero",
                    last: "Último",
                },
                aria: {
                    sortAscending: ": Activar para ordenar la columna de manera ascendente",
                    sortDescending: ": Activar para ordenar la columna de manera descendente"
                },
                select: {
                    rows: {
                        _: "%d filas seleccionadas",
                        0: "Haz clic en una fila para seleccionarla",
                        1: "1 fila seleccionada"
                    }
                },
                buttons: {
                    copyTitle: 'Copiado en el portapapeles',
                    copyKeys: 'Presiona <i>ctrl</i> o <i>\u2318</i> + <i>C</i> para copiar los datos de la tabla a tu portapapeles. <br><br>Para cancelar, haga clic en este mensaje o presione Esc.',
                    copySuccess: {
                        _: '%d registros copiados correctamente',
                        1: '1 registro copiado correctamente'
                    }
                }
            },
            lengthMenu: [[100, 200, 500, -1], [100, 200, 500, 'Todos']],
        });

    });

    function fct_IniciarTablaProductos(IdTabla) {
        // Inicializar DataTables con botones
        dtProductos = $(IdTabla).DataTable({
            buttons: [
                {
                    extend: 'copy',
                    text: '<i class="bi bi-back"></i>',
                    titleAttr: 'Copiar en portapapeles',
                    className: 'btn btn-primary',
                },
                {
                    extend: 'excel',
                    text: '<i class="bi bi-file-earmark-excel"></i>',
                    titleAttr: 'Exportar a Excel',
                    title: function() {
                        var sucursal = $('#cbx_Sucursal option:selected').text().trim();
                        var almacen = $('#cbx_Almacen option:selected').text().trim();

                        // Validación por si dice "-- SELECCIONE --" o está vacío
                        if (almacen === "" || almacen === "-- SELECCIONE --") {
                            almacen = "Todos";
                        }

                        return 'Reporte de Stock / Sucursal: ' + sucursal + ' / Almacén: ' + almacen;
                    },
                    className: 'btn btn-success',
                    filename: 'Productos ' + moment().format('DD-MM-YYYY HH_mm'),
                    footer: true,
                    exportOptions:
                    {
                        stripHtml: true,
                    },
                },
                {
                    extend: 'pdf',
                    text: '<i class="bi bi-file-earmark-pdf"></i>',
                    titleAttr: 'Exportar a PDF',
                    className: 'btn btn-danger',
                    filename: 'Productos ' + moment().format('DD-MM-YYYY HH_mm'),
                    title: function() {
                        var sucursal = $('#cbx_Sucursal option:selected').text().trim();
                        var almacen = $('#cbx_Almacen option:selected').text().trim();

                        // Validación por si dice "-- SELECCIONE --" o está vacío
                        if (almacen === "" || almacen === "-- SELECCIONE --") {
                            almacen = "Todos";
                        }

                        return 'Reporte de Stock\nSucursal: ' + sucursal + ' - Almacén: ' + almacen;
                    },
                    exportOptions: {
                        stripHtml: true,
                    },
                    orientation: 'landscape',
                    pageSize: 'LEGAL',
                    customize: function (doc) {
                        // Tu código de alineación a la derecha (mantenlo aquí)
                        var colsRight = [8];
                        doc.content[1].table.body.forEach(function (row) {
                            colsRight.forEach(function (index) {
                                if (row[index]) {
                                    row[index].alignment = 'right';
                                }
                            });
                        });

                        // Opcional: Para centrar el título que acabamos de crear
                        doc.styles.title.alignment = 'center';
                        doc.styles.title.fontSize = 14;
                    }
                },
                {
                    extend: 'print',
                    text: '<i class="bi bi-printer-fill"></i>',
                    titleAttr: 'Imprimir',
                    className: 'btn btn-info',
                    title: function() {
                        var sucursal = $('#cbx_Sucursal option:selected').text().trim();
                        var almacen = $('#cbx_Almacen option:selected').text().trim();

                        // Validación por si dice "-- SELECCIONE --" o está vacío
                        if (almacen === "" || almacen === "-- SELECCIONE --") {
                            almacen = "Todos";
                        }

                        return 'Reporte de Stock\nSucursal: ' + sucursal + ' - Almacén: ' + almacen;
                    },
                    exportOptions:
                    {
                        stripHtml: true,
                    },
                },
                {
                    extend: 'colvis',
                    text: '<i class="bi bi-ui-checks"></i>',
                    titleAttr: 'Seleccionar',
                    className: 'btn btn-warning',
                    columns: ':not(.noVis)',
                },
                {
                    text: '<i class= "bi bi-plus-circle" style="margin-right: 5px;"></i>Nuevo producto',
                    className: 'btn bg-success m-1',
                    titleAttr: 'Nuevo',
                    action: function (e, dt, node, config) {
                        fct_ProductoNuevo();
                    },
                },
            ],
            ajax: {
                url: "/Producto/GetProductosData",
                type: "GET",
                datatype: "json",
                data: function (d) {
                    d.almacenId = $('#cbx_Almacen').val();
                },
                dataSrc: function (json) {
                    if (json.status === false) {
                        toastr.error('Ocurrió un error inesperado al intentar listar la tabla');
                        console.error(json.message);
                        return [];
                    }
                    return json.data;
                },
                error: function (xhr, Status, error) {
                    toastr.error('Ocurrió un error inesperado al intentar listar la tabla');
                    console.error('Error en la solicitud Ajax. Status:', Status, 'Error:', error, 'XHR:', xhr);
                },
            },
            columns: [
                { data: "proveedor", name: "proveedor" },
                { data: "tipoDocumento", name: "tipoDocumento" },
                { data: "documento", name: "documento" },
                { data: "codigo", name: "codigo" },
                { data: "descripcionGrupo", name: "descripcionGrupo" },
                { data: "descripcionSubgrupo", name: "descripcionSubgrupo" },
                { data: "descripcionProducto", name: "descripcionProducto" },
                { 
                    data: "descripcionComercial", 
                    name: "descripcionComercial", 
                    render: function(data, type, row) {
                        return data ? data : '-';
                    },  
                },
                { data: "codUnidadMedida", name: "codUnidadMedida" },
                { 
                    data: "cantidad", 
                    name: "cantidad",
                    render: function(data, type, row) {
                        return formatearNumero(data);
                    },
                },
            ],
            columnDefs: [
                {
                    targets: [0],
                    className: "text-center align-middle",
                },
                {
                    targets: [1, 2, 3, 4, 5, 6, 7, 8],
                    className: 'align-middle',
                },
                // {
                //     targets: [],
                //     orderable: false,
                // },
            ],
            lengthMenu: [[100, 200, 500, -1], [100, 200, 500, 'Todos']],
            initComplete: function (data, row, cell, start, end, display) {
                $('.dt-buttons button').addClass('m-1');
                $('.dt-button-collection').appendTo('.dt-buttons');
                $('.btn.btn-success').removeClass('dt-button btn-secondary buttons-excel buttons-html5');
                $('.btn.btn-danger').removeClass('dt-button btn-secondary buttons-pdf buttons-html5');
                $('.btn.btn-primary').removeClass('dt-button btn-secondary buttons-copy buttons-html5');
                $('.btn.btn-info').removeClass('dt-button btn-secondary buttons-print');
                $('.btn.btn-warning').removeClass('dt-button btn-secondary buttons-collection buttons-colvis');
                //Botón Nuevo
                $('button[title="Nuevo"]').attr('id', 'btn_Nuevo');
                $('#btn_Nuevo').removeClass('dt-button');
                $('#btn_Nuevo').appendTo('div.col-sm-4.c1.d-flex.justify-content-end');
            },
        });
    }

    function fct_ProductoNuevo() {
        window.location.href = '/Producto/Registrar';
    }

    function fct_EmpresaEditar(Id) {
        window.location.href = `/Empresa/Editar/${Id}`;
    }

    function fct_EmpresaVer(Id) {
        window.location.href = `/Empresa/Ver/${Id}`;
    }

    function fct_EmpresaEliminar(Id) {
        Swal.fire({
            title: "¿Estás seguro?",
            text: "Esta acción eliminará a la empresa. ¿Deseas continuar?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sí, eliminar",
            cancelButtonText: "Cancelar",
            reverseButtons: true // Invertir el orden de los botones
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: `/Empresa/EliminarEmpresa/${Id}`,  // Pasamos el ID en la URL
                    type: "POST",
                    contentType: "application/json",
                    success: function (response) {
                        if (response.status === true) {
                                toastr.success(response.message, "MENSAJE DE SISTEMA");
                                window.location.href = "/Empresa";
                        } else {
                            toastr.warning(response.message, 'MENSAJE DE SISTEMA');
                            return;
                        }
                    },
                    error: function (xhr, Status, error) {
                        toastr.error("Error en el servidor", "MENSAJE DE SISTEMA");
                        console.error('Error en la solicitud Ajax. Status:', Status, 'Error:', error, 'XHR:', xhr);
                    }
                });
            }
        });
    }

    function fct_FillCombo(url, id, val, txt, ph, extra) {
        $.getJSON(url, function (res) {
            let h = `<option value="">${ph}</option>`;
            if (res.status) res.data.forEach(i => {
                let display = extra ? `${i[extra]} - ${i[txt]}` : i[txt];
                h += `<option value="${i[val]}">${display}</option>`;
            });
            $(id).html(h).trigger('change');
        });
    }
    
    function formatearNumero(numero) {
        // Validación para evitar errores si viene nulo o indefinido
        if (numero === null || numero === undefined || isNaN(numero)) {
            return "0.00";
        }

        // Convertimos a float por seguridad y formateamos
        return new Intl.NumberFormat('en-US', {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2
        }).format(parseFloat(numero));
    }

    function ShowSpinner() {
        $('#efec-cargando').removeClass('d-none');
    }

    function HideSpinner() {
        $('#efec-cargando').addClass('d-none');
    }
</script>