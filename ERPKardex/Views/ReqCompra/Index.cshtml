@using System.Security.Claims
@{
    ViewData["Title"] = "Bandeja de Requerimientos de Compra";
    var role = User.FindFirst(ClaimTypes.Role)?.Value;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"><i class="bi bi-inbox"></i> Requerimientos de Compra</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a href="/ReqCompra/Registrar" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> Nuevo Requerimiento
                </a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card shadow">
            <div class="card-body">
                <table id="tblData" class="table table-bordered table-hover w-100">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>N° REQ</th>
                            <th>F. EMISIÓN</th>
                            <th>SOLICITANTE</th>
                            <th>ESTADO</th>
                            <th style="width: 150px;">ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="modalDetalle" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="lblTituloModal">Detalle del Requerimiento</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-light border">
                    <strong>Observación:</strong> <span id="lblObservacion"></span>
                </div>
                <h6 class="font-weight-bold text-secondary mt-3">Productos Solicitados:</h6>
                <table class="table table-sm table-striped border">
                    <thead class="thead-light">
                        <tr>
                            <th>Item</th>
                            <th>Producto</th>
                            <th>U.M.</th>
                            <th class="text-center">Cantidad</th>
                        </tr>
                    </thead>
                    <tbody id="tblModalBody"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let role = @role;

        $(document).ready(function () {
            $('#tblData').DataTable({
                responsive: true,
                autoWidth: false,
                ajax: {
                    url: '/ReqCompra/GetRequerimientosData',
                    type: 'GET',
                    datatype: 'json'
                },
                columns: [
                    { data: "numero", className: "font-weight-bold align-middle" },
                    { data: "fechaEmision", className: "align-middle" },
                    { data: "solicitante", className: "align-middle" },
                    {
                        data: "estado", className: "text-center align-middle",
                        render: function (data) {
                            let color = 'secondary';
                            if(data === 'Pendiente') color = 'warning';
                            if(data === 'Aprobado') color = 'success';
                            if(data === 'Rechazado') color = 'danger';
                            return `<span class="badge badge-${color}" style="font-size:0.9rem">${data}</span>`;
                        }
                    },
                    {
                        data: null, className: "text-center",
                        render: function (data) {
                            // Solo mostrar botones aprobar/rechazar si está Pendiente (Id 1)
                            let botonesGestion = '';
                            if(data.estadoId === 1 && ["1", "3"].includes(role)) {
                                botonesGestion = `
                                <button class="btn btn-sm btn-success" title="Aprobar" onclick="cambiarEstado(${data.id}, 'Aprobado')">
                                    <i class="bi bi-check-lg"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" title="Rechazar" onclick="cambiarEstado(${data.id}, 'Rechazado')">
                                    <i class="bi bi-x-lg"></i>
                                </button>`;
                            }

                            return `
                            <div class="btn-group">
                                <button class="btn btn-sm btn-info" title="Ver Detalle" onclick="verDetalle(${data.id})">
                                    <i class="bi bi-eye-fill"></i>
                                </button>
                                ${botonesGestion}
                            </div>`;
                        }
                    }
                ],
                order: [[0, "desc"]]
            });
        });

        // --- VER DETALLE (MODAL) ---
        function verDetalle(id) {
            $('#tblModalBody').html('<tr><td colspan="4" class="text-center">Cargando...</td></tr>');
            $('#modalDetalle').modal('show');

            $.get('/ReqCompra/GetDetalleReq?id=' + id, function(res) {
                if(res.status) {
                    $('#lblTituloModal').text("Requerimiento: " + res.cabecera.numero);
                    $('#lblObservacion').text(res.cabecera.observacion || "Sin observaciones");

                    let html = '';
                    res.detalles.forEach(d => {
                        html += `<tr>
                            <td>${d.item}</td>
                            <td>${d.descripcionProducto}</td>
                            <td>${d.unidadMedida}</td>
                            <td class="text-center font-weight-bold">${d.cantidadSolicitada}</td>
                        </tr>`;
                    });
                    $('#tblModalBody').html(html);
                }
            });
        }

        // --- APROBAR / RECHAZAR ---
        function cambiarEstado(id, nuevoEstadoNombre) {
            // nuevoEstadoNombre debe ser "Aprobado" o "Rechazado"
            let accion = nuevoEstadoNombre === "Aprobado" ? "Aprobar" : "Rechazar";
            let color = nuevoEstadoNombre === "Aprobado" ? "#28a745" : "#dc3545";

            Swal.fire({
                title: `¿${accion} Requerimiento?`,
                icon: "warning",
                showCancelButton: true,
                reverseButtons: true,
                confirmButtonColor: color,
                confirmButtonText: `Sí, ${accion}`,
                cancelButtonText: "Revisar"
            }).then((result) => {
                if (result.isConfirmed) {
                    // Nota: Enviamos 'nombreEstado' en lugar de 'estadoId'
                    $.post('/ReqCompra/CambiarEstado', { id: id, nombreEstado: nuevoEstadoNombre }, function(res) {
                        if(res.status) {
                            Swal.fire("Éxito", res.message, "success");
                            // Recargar tabla correspondiente
                            $('#tblData').DataTable().ajax.reload();
                        } else {
                            Swal.fire("Error", res.message, "error");
                        }
                    });
                }
            });
        }
    </script>
}