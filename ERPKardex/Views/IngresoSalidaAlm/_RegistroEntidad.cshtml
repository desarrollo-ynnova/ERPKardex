<div class="row">
    <div class="col-md-12">
        <form id="form_registro_entidad">
            <div class="form-group">
                <label>RUC / Documento</label>
                <input type="text" id="ent_ruc" class="form-control" maxlength="11" placeholder="Ingrese RUC">
            </div>
            <div class="form-group">
                <label>Razón Social</label>
                <input type="text" id="ent_razon_social" class="form-control" placeholder="Nombre o Razón Social">
            </div>
        </form>
    </div>
</div>

<div class="text-right">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
    <button type="button" class="btn btn-primary" onclick="guardarNuevaEntidad()">Guardar Entidad</button>
</div>

<script>
    $(document).ready(function() {
        $('#ent_ruc').on('keypress', function (e) {
            var charCode = (e.which) ? e.which : e.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) return false;
            if ($(this).val().length >= 11) return false;
        });
    });

    function guardarNuevaEntidad() {
        const ruc = $('#ent_ruc').val().trim();
        const rs = $('#ent_razon_social').val().trim();

        if (ruc === "" || rs === "") {
            toastr.warning("Todos los campos son obligatorios");
            return;
        }

        let data = new FormData();
        data.append("Ruc", ruc);
        data.append("RazonSocial", rs);

        $.ajax({
            url: '/IngresoSalidaAlm/GuardarEntidadRapido',
            type: 'POST',
            data: data,
            processData: false,
            contentType: false,
            success: function (res) {
                if (res.status) {
                    toastr.success(res.message);
                    $('#dynamic-modal').modal('hide'); // Cierra el modal

                    // RECARGA LOS COMBOS Y SELECCIONA EL NUEVO
                    cargarComboEntidades(function() {
                        $('#cbx_ProveedorRef').val(res.id).trigger('change');
                    });
                } else {
                    toastr.error(res.message);
                }
            }
        });
    }
</script>